#include <stdio.h>
#include "main.h"
/**
 * _abs - checks alpha char
 * @n: the number to be evaluated
 * Return: 1 or 0 or -1
 *
 */
int _abs(int n)
{
	if (n > 0)
	{
		_putchar('+');
		return (1);
	}
	else if (n == 0)
	{
		_putchar('0');
		return (0);
	}
	else
	{
		_putchar('-');
		return (-1);
	}
}
